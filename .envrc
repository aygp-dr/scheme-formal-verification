#!/usr/bin/env bash
# Project environment configuration

# Project identification
export PROJECT_NAME="scheme-formal-verification"
export PROJECT_ROOT="$(pwd)"

# Development environment
export GUILE_LOAD_PATH="${PROJECT_ROOT}/src:${GUILE_LOAD_PATH}"
export GUILE_LOAD_COMPILED_PATH="${PROJECT_ROOT}/src:${GUILE_LOAD_COMPILED_PATH}"

# Emacs/Geiser configuration
export GEISER_GUILE_LOAD_PATH="${PROJECT_ROOT}/src"
export GEISER_ACTIVE_IMPLEMENTATIONS="guile"

# TLA+ tools path (if available)
if [ -d "${HOME}/tla-tools" ]; then
    export TLA_TOOLS_PATH="${HOME}/tla-tools"
fi

# Development helpers
export EDITOR="${EDITOR:-emacs}"
export TERM="${TERM:-xterm-256color}"

echo "Project environment loaded: ${PROJECT_NAME}"
echo "Project root: ${PROJECT_ROOT}"